<!-- //需求：拓展配置项“config_menu_click_style”，添加可配置项2。2为打开“竖直列表”样式的桌面菜单。	//xiatian add whole file -->
<com.cooee.phenix.WorkspaceMenu.WorkspaceMenuVerticalList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" >

    <ImageView
        android:id="@+id/workspace_menu_vertical_list_bg_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/workspace_menu_vertical_list_bg_color" />

    <com.cooee.phenix.WorkspaceMenu.WorkspaceMenuVerticalListContent
        android:id="@+id/workspace_menu_vertical_list_content_id"
        style="@style/workspace_menu_vertical_list_content_margin_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/workspace_menu_vertical_list_content_bg_layer_list"
        android:cacheColorHint="#00000000"
        android:divider="@color/workspace_menu_vertical_list_content_divider_color"
        android:dividerHeight="@dimen/workspace_menu_vertical_list_content_divider_height"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:paddingTop="@dimen/workspace_menu_vertical_list_content_bg_stroke_width" />

</com.cooee.phenix.WorkspaceMenu.WorkspaceMenuVerticalList>
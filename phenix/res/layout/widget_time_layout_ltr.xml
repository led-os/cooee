<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WidgetTimeCNContentStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hour_ten"
            android:layout_width="@dimen/widget_time_number_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_alignParentLeft="true"
            android:src="@drawable/widget_time_t0" />

        <ImageView
            android:id="@+id/hour_one"
            android:layout_width="@dimen/widget_time_number_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_toRightOf="@+id/hour_ten"
            android:src="@drawable/widget_time_t0" />

        <ImageView
            android:id="@+id/hour_dian"
            android:layout_width="@dimen/widget_time_dian_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_toRightOf="@+id/hour_one"
            android:src="@drawable/widget_time_dian" />

        <ImageView
            android:id="@+id/minute_ten"
            android:layout_width="@dimen/widget_time_number_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_toRightOf="@+id/hour_dian"
            android:src="@drawable/widget_time_t0" />

        <ImageView
            android:id="@+id/minute_one"
            android:layout_width="@dimen/widget_time_number_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_toRightOf="@+id/minute_ten"
            android:src="@drawable/widget_time_t0" />

        <ImageView
            android:id="@+id/minute_am"
            android:layout_width="@dimen/widget_time_number_width"
            android:layout_height="@dimen/widget_time_number_height"
            android:layout_toRightOf="@+id/minute_one"
            android:src="@drawable/widget_time_am" />
    </RelativeLayout>

    <LinearLayout
        style="@style/WidgetTimeCNDateContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04月03日 "
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
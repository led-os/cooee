<?xml version="1.0" encoding="utf-8"?>
<com.cooee.phenix.editmode.entryitemview.EntryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/edit_entry_item_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/edit_entry_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/edit_mode_theme_item_title_padding_bottom"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</com.cooee.phenix.editmode.entryitemview.EntryItemView>
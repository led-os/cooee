<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updateMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaeff1" >

    <ImageView
        android:id="@+id/updateLogo"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/uiupdate_update_logo" />

    <TextView
        android:id="@+id/version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/update_version_name"
        android:textColor="#ffffffff"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/update_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/updateLogo"
        android:background="@drawable/update_line" />

    <LinearLayout
        android:id="@+id/updateContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/update_line"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/updateListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="@string/updateListTitle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/updateList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:lineSpacingExtra="15dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/updateBtnFrag"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp" />

           

            <TextView
                android:id="@+id/updatePrivacyStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="@string/uiupdate_privacy_statement_link_url"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/updateCopyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="@string/updateCopyRight"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="235dp"
    android:layout_gravity="center"
    android:background="#FFFFFF" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#4AB6D9" >

        <TextView
            android:id="@+id/warn"
            style="@style/DynamicDownloadDialogWarnStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/warn"
            android:textColor="#EEEEEE"
            android:textSize="18sp" />

        <Button
            android:id="@+id/exit"
            style="@style/DynamicDownloadDialogExitStyle"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/disclaimer_dialog_exit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dowanload_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/download"
        android:layout_below="@+id/download_title" >

        <TextView
            android:id="@+id/download_icontext"
            style="@style/DynamicDownloadDialogIconTextStyle"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="#101010" />

        <View
            style="@style/DynamicDownloadDialogLineStyle"
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:background="#cccccc" />

        <TextView
            style="@style/DynamicDownloadDialogTipStyle"
            android:id="@+id/download_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/widget_download_content"
            android:textColor="#505050"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/download"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dip"
        android:background="@drawable/disclaimer_dialog_confirm"
        android:text="@string/ok"
        android:textColor="#ffffff" />

</RelativeLayout>
<!-- cheyingkun add end -->
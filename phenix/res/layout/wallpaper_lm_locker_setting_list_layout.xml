<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/lLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
    <Button
        android:id="@+id/wallpaper_chooser_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/wallpaper_lm_locker_setting_list_item_bg_selector"
        android:gravity="center"
        android:text="@string/wallpaper_lm_locker_setting_list_item_cancle"
        android:textColor="@color/alertdialog_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- 文件夹打开样式为“非全屏”时布局 -->
<com.cooee.phenix.Folder.Folder xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.cooee.phenix"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/portal_container_holo"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.cooee.phenix.CellLayout
            android:id="@+id/folder_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#ff333333"
            android:hapticFeedbackEnabled="false" />
    </ScrollView>

    <com.cooee.phenix.Folder.FolderEditText
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:hint="@string/folder_hint_text"
        android:imeOptions="flagNoExtractUi"
        android:paddingBottom="@dimen/folder_name_padding"
        android:paddingTop="@dimen/folder_name_padding"
        android:singleLine="true"
        android:textColor="#ff777777"
        android:textColorHighlight="#ffCCCCCC"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

</com.cooee.phenix.Folder.Folder>
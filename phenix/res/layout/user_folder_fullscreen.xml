<?xml version="1.0" encoding="utf-8"?>
<!-- 文件夹打开样式为“全屏”时的布局 -->
<com.cooee.phenix.Folder.FolderFullScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.cooee.phenix"
    xmlns:folderfullscreen="http://schemas.android.com/apk/res-auto/com.cooee.phenix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/folder_full_screen_bg_color_open"
    android:orientation="vertical"
    folderfullscreen:mGapX="@dimen/folderfullscreen_cell_gapx"
    folderfullscreen:mGapY="@dimen/folderfullscreen_cell_gapy"
    folderfullscreen:mMarginLeft="@dimen/folderfullscreen_marginleft"
    folderfullscreen:mMarginRight="@dimen/folderfullscreen_marginright"
    folderfullscreen:mNums="@integer/config_folderfullscreen_max_nums" >

    <com.cooee.phenix.Folder.FolderEditText
        android:id="@+id/folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:hint="@string/folder_hint_text"
        android:imeOptions="flagNoExtractUi"
        android:paddingBottom="@dimen/folder_name_padding"
        android:paddingTop="@dimen/folder_name_padding"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textCursorDrawable="@null"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <com.cooee.phenix.CellLayout
            android:id="@+id/folder_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#51ffffff"
            android:hapticFeedbackEnabled="false" />
    </ScrollView>

    <!-- cheyingkun add start -->
    <!-- 文件夹需求(长按显示边框) -->

    <ImageView
        android:id="@+id/folder_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/folder_edge_hint"
        android:visibility="gone" />
    <!-- cheyingkun add end -->

</com.cooee.phenix.Folder.FolderFullScreen> <!-- </com.cooee.phenix.Folder.FolderFullScreen> -->

<?xml version="1.0" encoding="utf-8"?>
<!-- Full screen view projects under the status bar and contains the background -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.cooee.phenix"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.cooee.phenix.DragLayer
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- The workspace contains 5 screens of cells -->

        <com.cooee.phenix.Workspace
            android:id="@+id/workspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            launcher:pageIndicator="@id/page_indicator"
            launcher:pageSpacing="@dimen/workspace_page_spacing"
            launcher:screenNumMax="@integer/config_maxNumberOfPageIndicatorsToShow" >
        </com.cooee.phenix.Workspace>

        <include
            android:id="@+id/hotseat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/hotseat" />

        <include
            android:id="@+id/overview_panel"
            layout="@layout/overview_panel"
            android:visibility="gone" />

        <!-- Keep these behind the workspace so that they are not visible when we go into AllApps -->

        <include
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            layout="@layout/page_indicator" />

        <include
            android:id="@+id/search_drop_target_bar_id"
            layout="@layout/search_drop_target_bar_layout" />

        <!-- The Workspace cling must appear under the AppsCustomizePagedView below to ensure -->
        <!-- that it is still visible during the transition to AllApps and doesn't overlay on -->
        <!-- top of that view. -->

        <com.cooee.phenix.ScrimView
            android:id="@+id/cling_scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <include
            android:id="@+id/first_run_cling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/first_run_cling"
            android:visibility="gone" />

        <include
            android:id="@+id/workspace_cling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/workspace_cling"
            android:visibility="gone" />

        <include
            android:id="@+id/folder_cling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/folder_cling"
            android:visibility="gone" />

        <!-- //zhujieping del start	//通过代码addview加入，在layout中添加的话，即使不显示，也占用内存 -->
        <!-- //cheyingkun add start	//桌面启动页样式（详见“BaseDefaultConfig”中说明） -->
        <!-- <include -->
        <!-- android:id="@+id/launcher_loading" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
        <!-- layout="@layout/loading" -->
        <!-- android:background="#000000" -->
        <!-- android:visibility="gone" /> -->
        <!-- //cheyingkun add end	//桌面启动页样式（详见“BaseDefaultConfig”中说明） -->
        <!-- //zhujieping del end	//通过代码addview加入，在layout中添加的话，即使不显示，也占用内存 -->

        <include
            android:id="@+id/apps_customize_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/apps_customize_pane"
            android:visibility="invisible" />
    </com.cooee.phenix.DragLayer>

</FrameLayout>
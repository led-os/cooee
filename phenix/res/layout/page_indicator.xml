<?xml version="1.0" encoding="utf-8"?>
<!-- 页面指示器逻辑 -->
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.cooee.phenix.pageIndicators.PageIndicatorNormal xmlns:android="http://schemas.android.com/apk/res/android"
		    xmlns:launcher="http://schemas.android.com/apk/res-auto/com.cooee.phenix"
		    android:animateLayoutChanges="true"
		    android:id="@+id/pageIndicatorNormal"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/dynamic_grid_page_indicator_height"
		    launcher:windowSize="@integer/config_maxNumberOfPageIndicatorsToShow" >
	</com.cooee.phenix.pageIndicators.PageIndicatorNormal>
	<com.cooee.phenix.pageIndicators.PageIndicatorCaret
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/pageIndicatorCaret"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/dynamic_grid_page_indicator_height">
	        <ImageView
	            android:id="@+id/all_apps_handle"
	            android:layout_width="48dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center"
	            android:scaleType="centerInside"/>
	</com.cooee.phenix.pageIndicators.PageIndicatorCaret>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/camera_page_camera_preview_layout_width"
    android:layout_height="@dimen/camera_page_camera_preview_layout_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/camera_page_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera_page_view_bg" />

    <LinearLayout
        android:id="@+id/camera_page_ad_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/camera_page_ad_unselected" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CameraPageViewAdViewIndicatorStyle"
            android:visibility="gone"
            android:src="@drawable/camera_page_ad_unselected" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CameraPageViewAdViewIndicatorStyle"
            android:visibility="gone"
            android:src="@drawable/camera_page_ad_unselected" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CameraPageCameraPictureItemStyle" >

        <!-- CameraPage -->

        <ImageView
            android:id="@+id/camera_page_picture_bg"
            android:layout_width="@dimen/camera_page_picture_item_width"
            android:layout_height="@dimen/camera_page_picture_item_height"
            android:background="@drawable/camera_page_list_item_bg" />

        <ImageView
            android:id="@+id/camera_page_picture"
            android:layout_width="@dimen/camera_page_picture_item_picture_width"
            android:layout_height="@dimen/camera_page_picture_item_picture_height"
            style="@style/CameraPagePictureStyle"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_page_default_pic2"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/camera_page_picure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CameraPagePictureTimeStyle"
            android:layout_marginTop="@dimen/camera_page_picture_item_date_margin_top"
            android:gravity="center"
            android:text="19:45"
            android:textSize="6.5dp" />
    </RelativeLayout>

</FrameLayout>
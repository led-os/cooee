<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cooee.widgetnative.ALL3in1"
    android:installLocation="internalOnly"
    android:versionCode="39693"
    android:versionName="2017.03.13.39693" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.CREATE_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 显示系统窗口 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 允许程序在手机屏幕关闭后后台进程仍然运行 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 允许程序开机自动运行 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/widget_preview_image"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cooee.widgetnative.ALL3in1.ClockWeather.activity.DownloadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Translucent_NoTitle" >
        </activity>

        <service
            android:name="com.cooee.statistics.StatisticsServiceNew"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.cooee.widgetnative.ALL3in1.Photo.activity.PickPicDialogActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:process=":remote"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- 广告 start -->
        <activity android:name="com.kmob.kmobsdk.InAppWebView" />
        <activity
            android:name="com.kmob.kmobsdk.AdActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />

        <service
            android:name="com.kmob.kmobsdk.KmobService"
            android:exported="true"
            android:process="com.kmob.dl.process" />

        <meta-data
            android:name="KMobAd_APP_ID"
            android:value="502" >
        </meta-data>
        <!-- 广告 end -->


        <!-- receiver的 android:name指向的是widget的请求处理器或者说请求接收者 -->
        <receiver
            android:name="com.cooee.widgetnative.ALL3in1.base.WidgetProvider"
            android:exported="true"
            android:label="@string/app_name"
            android:process=":remote" >
            <intent-filter>

                <!-- widget默认的事件action -->
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- 点击天气时钟插件对应的广播字符串 -->
                <action android:name="com.cooee.widgetnative.ALL3in1.click.clock_layout" />
                <action android:name="com.cooee.widgetnative.ALL3in1.click.weather_layout" />
                <action android:name="com.cooee.widgetnative.ALL3in1.click.date_layout" />
                <!-- 点击相册插件对应的广播字符串 -->
                <action android:name="com.cooee.widgetnative.ALL3in1.click.photo_layout" />
                <!-- 用于服务被杀死后重启服务 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_MOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
            <intent-filter android:priority="2147483645" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.SIM_STATE_CHANGED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <!-- widget元数据,name是写死的，resource指的是widget的配置文件 -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <service
            android:name="com.cooee.widgetnative.ALL3in1.base.WidgetService"
            android:process=":remote" >
            <intent-filter android:priority="2147483644" >

                <!-- 更改时间或日期 -->
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.TIME_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <!-- 秒钟每到0秒系统发送的广播 -->
                <action android:name="android.intent.action.TIME_TICK" />
                <!-- 音乐改变广播 -->
                <action android:name="com.android.music.playstatechanged" />
                <action android:name="com.android.music.metachanged" />
                <!-- 用于服务被杀死后重启服务 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.cooee.widgetnative.ALL3in1.base.WidgetRestartReceiver"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.cooee.phenix.onResume.UpdateWidgetView" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
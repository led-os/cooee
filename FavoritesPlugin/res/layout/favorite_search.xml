<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/favorite_search_bar_bg_shape" >

    <com.cooee.favorites.view.HolographicLinearLayout
        android:id="@+id/search_button_container"
        style="@style/FavoriteSearchSearchButtonContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/favorites_search_bar_height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/imageButton1"
            style="@style/FavoriteSearchSearchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginTop="2dp"
            android:background="@drawable/search_logo_shenma_bg"
            android:clickable="true" />
    </com.cooee.favorites.view.HolographicLinearLayout>

</RelativeLayout>
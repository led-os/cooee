<com.cooee.favorites.news.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include android:id="@+id/refresh_head"
        layout="@layout/refresh_head" />
    <!-- 支持所有实现Pullable接口的View -->

    <ListView 
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include android:id="@+id/load_more"
        layout="@layout/load_more" />
    
	
</com.cooee.favorites.news.PullToRefreshLayout>
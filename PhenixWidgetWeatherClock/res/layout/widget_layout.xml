<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/weather_clock_layout">
	
	<ImageView
		android:id="@+id/weather_clock_layout_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/widget_bg" />
	<!-- 时钟插件布局 -->
	<LinearLayout
		android:id="@+id/clock_layout"
		android:layout_width="110dp"
		android:layout_height="38dp"
		android:layout_marginTop="@dimen/clock_time_margin_top"
		android:layout_marginLeft="@dimen/clock_time_margin_left"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/clock_hour_tens"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="小时十位数"
			android:layout_weight="1"
			android:src="@drawable/clock_time_0" />
		<ImageView
			android:id="@+id/clock_hour_ones"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="小时个位数"
			android:layout_marginLeft="@dimen/clock_time_gap_x_between_number_and_number"
			android:layout_weight="1"
			android:src="@drawable/clock_time_0" />
		<ImageView
			android:id="@+id/clock_hour_colons"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/clock_time_gap_x_between_number_and_number"
			android:contentDescription="分割点"
			android:layout_weight="1"
			android:src="@drawable/clock_time_dot" />
		<ImageView
			android:id="@+id/clock_minute_tens"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="分钟十位数"
			android:layout_weight="1"
			android:src="@drawable/clock_time_0" />
		<ImageView
			android:id="@+id/clock_minute_ones"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/clock_time_gap_x_between_number_and_number"
			android:contentDescription="分钟个位数"
			android:layout_weight="1"
			android:src="@drawable/clock_time_0" />

	</LinearLayout>
	<!-- 日期布局 -->
	<TextView
		android:id="@+id/date_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/clock_date_margin_top"
		android:layout_marginLeft="@dimen/clock_date_margin_left"
		android:text="00/00"
		android:textColor="@android:color/white"
		android:singleLine="true"
		android:clickable="true"
		android:textSize="12sp" />

	<!-- 天气插件布局 -->
	<!-- 城市名 -->
	<TextView
		android:id="@+id/city_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/weather_city_margin_top"
		android:layout_marginLeft="@dimen/weather_city_margin_left"
		android:text="@string/weather_default_cityName"
		style="@style/weather_city_and_temperatrue_text_style"
		android:singleLine="true" />
	<!-- 天气图片 -->
	<ImageView
		android:id="@+id/weather_city"
		android:layout_width="33dp"
		android:layout_height="33dp"
		android:layout_marginTop="@dimen/weather_data_margin_top"
		android:layout_marginRight="@dimen/weather_data_margin_right"
		android:layout_alignParentRight="true"
		android:src="@drawable/weather_data_unknow" />
	<!-- 温度范围 -->
	<TextView
		android:id="@+id/temperature_range"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="@dimen/weather_temperature_range_margin_top"
		android:layout_marginRight="@dimen/weather_temperature_range_margin_right"
		android:text="0°/0°"
		style="@style/weather_city_and_temperatrue_text_style"
		android:singleLine="true" />
	<!-- 当前温度 -->
	<TextView
		android:id="@+id/temperature_current"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/temperature_range"
		android:layout_marginTop="@dimen/weather_temperature_margin_top"
		android:layout_marginRight="@dimen/weather_temperature_margin_right"
		android:text="0℃"
		style="@style/weather_city_and_temperatrue_text_style"
		android:singleLine="true" />

</RelativeLayout>

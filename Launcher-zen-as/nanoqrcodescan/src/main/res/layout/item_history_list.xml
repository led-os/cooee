<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/browser_icon"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/list_item_detail_bg"
                android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentTop="true"
                        android:text="安卓下载页"
                        android:textColor="#666666"
                        android:textSize="16dp"/>
            <TextView
                    android:id="@+id/tv_content"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="3dp"
                    android:text="www.launcher.com"
                    android:textColor="#9c9b9a"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                   android:paddingTop="3dp"
                    android:layout_gravity="center_vertical"
            >
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_share"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="1dp"

                >
            <Button android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/btn_share"
                       android:background="@drawable/btn_share_selector"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/btn_share"
                      android:text="@string/history_share"
                      android:textSize="14sp"
                      android:layout_marginLeft="4dp"
                      android:textColor="@color/copy_text"
                    />
        </RelativeLayout>
        <!--删除-->
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_delete"
                        android:layout_toLeftOf="@id/rl_share"
                        android:layout_marginRight="8dp"

                >
            <Button android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/btn_delete"
                       android:background="@drawable/btn_delete_selector"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/btn_delete"
                      android:text="@string/history_delete"
                      android:layout_marginLeft="4dp"
                      android:textColor="@color/copy_text"
                      android:textSize="14sp"
                    />
        </RelativeLayout>
        <!--复制-->
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_copy"
                        android:layout_toLeftOf="@id/rl_delete"
                        android:layout_marginRight="8dp"
                >
            <Button android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/btn_copy"
                       android:background="@drawable/btn_copy_selector"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/btn_copy"
                      android:text="@string/history_copy"
                      android:layout_marginLeft="4dp"
                      android:textColor="@color/copy_text"
                      android:textSize="14sp"
                    />
        </RelativeLayout>

    </RelativeLayout>
    <View
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
           android:layout_marginTop="10dp"/>

</LinearLayout>

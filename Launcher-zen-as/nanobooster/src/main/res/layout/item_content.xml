<?xml version="1.0" encoding="utf-8"?>
<com.cooeeui.nanobooster.views.RippleView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        ripple:rv_type="rectangle"
        android:id="@+id/rv_delete_common">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="43dp"
                          android:background="#ffffff"
                          android:gravity="center_vertical"
                          android:orientation="horizontal"
                          android:id="@+id/ll_parent">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/rl_parent"
                                android:gravity="center_vertical">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="8dp"
                                  android:gravity="center_vertical">
                        <CheckBox android:layout_width="25dp"
                                  android:layout_height="25dp"
                                  android:id="@+id/cb_item"
                                  android:layout_marginLeft="8dp"
                                  android:layout_centerVertical="true"
                                  android:visibility="visible"
                                  android:clickable="false"
                                  android:focusable="false"
                                  android:focusableInTouchMode="false"
                                  android:background="@drawable/running_checkbox_selector"
                                  android:button="@null"/>

                        <ImageView android:layout_width="35dp"
                                   android:layout_height="35dp"
                                   android:id="@+id/iv_tubiao"
                                   android:layout_toRightOf="@+id/cb_item"
                                   android:layout_centerVertical="true"
                                   android:layout_marginLeft="7dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="UC"
                                  android:layout_toRightOf="@+id/iv_tubiao"
                                  android:layout_centerVertical="true"
                                  android:layout_marginLeft="9dp"
                                  android:textSize="15dp"
                                  android:textColor="#848991"
                                  android:id="@+id/tv_tubiao_name"
                                  android:ellipsize="end"
                                  android:singleLine="true"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:layout_centerVertical="true"
                              android:text="28.88MB"
                              android:layout_toLeftOf="@+id/iv_del_or_add"
                              android:id="@+id/tv_size"
                              android:textSize="15dp"
                              android:textColor="#848991"/>

                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_centerInParent="true"
                               android:id="@+id/iv_del_or_add"
                               android:src="@drawable/delete"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="8dp"
                               android:layout_marginLeft="13dp"/>

                </RelativeLayout>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#cbccd3"
                      android:layout_alignParentBottom="true"
                      android:layout_marginLeft="7dp"
                      android:layout_marginRight="7dp"/>
        </LinearLayout>
    </RelativeLayout>
</com.cooeeui.nanobooster.views.RippleView>

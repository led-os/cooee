<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#313743"
            android:layout_gravity="center_vertical">

        <ImageView
                android:id="@+id/wallpaper_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zs_back_arrow_selector"
                android:src="@mipmap/wallpaper_back"/>

        <TextView
                android:id="@+id/tv_wall_paper_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/wallpaper_local"
                android:textColor="#cde0ff"
                android:textSize="18dp"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/ll_wallpaper_gallery"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#50c14b"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/wallpaper_gallery"/>

            <TextView
                    android:id="@+id/tv_wallpaper_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/wallpaper_gallery"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"/>
        </LinearLayout>

        <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:id="@+id/ll_wallpaper_livewallpaper"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#47a7f1"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/wallpaper_livewallpaper"/>

            <TextView
                    android:id="@+id/tv_wallpaper_livewallpaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/wallpaper_liver_wallpaper"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <GridView
            android:id="@+id/wallpaper_gridview"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:numColumns="2"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:scrollingCache="false"
            android:stretchMode="columnWidth"
            android:textFilterEnabled="true"
            android:gravity="center"
            ></GridView>

</LinearLayout>

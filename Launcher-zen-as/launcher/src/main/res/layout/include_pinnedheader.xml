<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/add_app_spinned_header"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/pop_margin_left"
            android:layout_marginRight="@dimen/pop_margin_right"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dip"
            android:paddingTop="2dip">

        <com.cooeeui.brand.zenlauncher.android.view.HandyTextView
                android:id="@+id/spinnedlist_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pop_font"
                android:textSize="20dp"/>
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/pop_margin_left"
            android:layout_marginRight="@dimen/pop_margin_right"
            android:background="@color/bg_sitespan_press"/>

</LinearLayout>

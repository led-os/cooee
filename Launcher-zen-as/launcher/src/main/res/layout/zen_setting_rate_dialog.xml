<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@android:style/Theme.Light.NoTitleBar.Fullscreen"
              android:layout_width="@dimen/zen_setting_rate_width"
              android:layout_height="@dimen/zen_setting_rate_height"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zen_setting_rate_top_height"
            android:background="@drawable/zs_rate_bg_top"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/zs_rate_logo"/>

        <TextView
                android:id="@+id/rate_launcher_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/zen_launcher"
                android:textColor="#313130"
                android:textSize="18dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zs_rate_star"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/zs_rate_star"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/zs_rate_star"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/zs_rate_star"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/zs_rate_star"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zen_setting_rate_bottom_height"
            android:background="@drawable/zs_rate_bg_bottom"
            android:gravity="center"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/rl_rate_encourage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ds_item_selector"
                android:clickable="true">

            <TextView
                    android:id="@+id/rate_button_encourage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/zs_rate_button_encourage"
                    android:textColor="#686868"
                    android:textSize="17dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#cbcdcc"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_rate_feedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ds_item_selector"
                android:clickable="true">

            <TextView
                    android:id="@+id/rate_button_feedback_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/zs_rate_button_feedback"
                    android:textColor="#686868"
                    android:textSize="17dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#cbcdcc"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_rate_later"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ds_item_selector"
                android:clickable="true">

            <TextView
                    android:id="@+id/rate_button_later_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/zs_rate_button_later"
                    android:textColor="#686868"
                    android:textSize="17dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
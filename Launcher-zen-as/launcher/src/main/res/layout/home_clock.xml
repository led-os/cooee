<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/ll_group_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_hour_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_0"/>

        <ImageView
                android:id="@+id/iv_hour_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_0"
                android:layout_marginLeft="6dp"/>

        <ImageView
                android:id="@+id/iv_colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_colon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        <ImageView
                android:id="@+id/iv_minute_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_0"/>

        <ImageView
                android:id="@+id/iv_minute_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_0"
                android:layout_marginLeft="6dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_group_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:shadowColor="@color/text_shadow_color"
                android:shadowDx="0"
                android:shadowDy="@integer/shadow_dy"
                android:shadowRadius="@integer/shadow_radius"
                android:text="week. mouth.date"/>

    </LinearLayout>
</LinearLayout>

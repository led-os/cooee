<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@android:style/Theme.Light.NoTitleBar.Fullscreen"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
            android:id="@+id/alert_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_head_bg">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/zen_logo"/>

            <TextView
                    android:id="@+id/tv_alert_head_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:text="@string/zen_launcher"
                    android:textColor="#ffffff"
                    android:textSize="22dp"/>

            <TextView
                    android:id="@+id/tv_alert_head_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="V 1.7.2"
                    android:textColor="#ffffff"
                    android:textSize="22dp"/>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">

        <TextView
                android:id="@+id/tv_version_update_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/version_update_prompt"
                android:textColor="#545860"
                android:textSize="14dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#cbcdcf">
        </View>
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/ll_version_info_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/version_update_detail_item_marginTop"
                android:orientation="vertical"
                android:visibility="gone">
            <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="What't new:"
                    android:textSize="18dp"
                    android:textColor="#545860"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:text="1.absdfdsf"
                    android:textSize="12dp"
                    android:textColor="#7e8085"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:text="2.ljljljljl"
                    android:textSize="12dp"
                    android:textColor="#7e8085"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:text="3.erteryirtpj"
                    android:textSize="12dp"
                    android:textColor="#7e8085"/>-->
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

            <CheckBox
                    android:id="@+id/cb_version_update_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/alert_checkbox_selector"/>

            <TextView
                    android:id="@+id/tv_update_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/version_update_checkbox"
                    android:textSize="18dp"
                    android:textColor="#388deb"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#cbcdcf">
        </View>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_version_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="right|center_vertical"
                android:paddingLeft="120dp"
                android:paddingRight="1dp"
                android:text="@string/version_update"
                android:textColor="@drawable/alert_button_left_selector"
                android:textSize="16dp"/>

        <TextView
                android:id="@+id/tv_version_update_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/alter_cancel"
                android:textColor="@drawable/alert_button_right_selector"
                android:textSize="16dp"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/zs_ZenLifeTitleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zen_setting_titlebar_height"
            android:background="#333333">

        <FrameLayout
                android:id="@+id/zen_LifeBack"
                android:layout_width="@dimen/arrow_width"
                android:layout_height="match_parent"
                android:background="@drawable/zs_back_arrow_selector">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/zen_setting_titlebackmarginleft"
                    android:layout_marginStart="@dimen/zen_setting_titlebackmarginleft"
                    android:src="@drawable/zs_back_arrow"/>
        </FrameLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zs_ZenLife"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/zen_setting_title_text_size"
                />

    </RelativeLayout>
    <com.cooeeui.brand.zenlauncher.tips.NumberProgressBar
            android:id="@+id/progressBarStatus"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            custom:progress_text_visibility="invisible"
            style="@style/NumberProgressBar_Default"
            />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <WebView
                android:id="@+id/zenLifeWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <ImageButton
                android:id="@+id/imageButton"
                android:layout_gravity="left|bottom"
                android:layout_width="@dimen/zen_setting_ZenLifeButtonWidth"
                android:layout_height="@dimen/zen_setting_ZenLifeButtonHeight"
                android:background="@color/transparent"
                android:layout_marginLeft="@dimen/zen_setting_ZenLifeButtonMargin"
                android:layout_marginBottom="@dimen/zen_setting_ZenLifeButtonMargin"
                android:scaleType="fitXY"
                android:src="@drawable/share"/>
    </FrameLayout>

</LinearLayout>


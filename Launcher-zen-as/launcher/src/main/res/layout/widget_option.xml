<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/widget_bg"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/widget_delete"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/widget_delete"/>

        <View
                android:id="@+id/widget_line_left"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_toRightOf="@id/widget_delete"
                android:alpha="0.5"
                android:background="@color/tips_line"/>

        <ImageView
                android:id="@+id/widget_ok"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/widget_ok"/>

        <View
                android:id="@+id/widget_line_right"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/widget_ok"
                android:alpha="0.5"
                android:background="@color/tips_line"/>

        <LinearLayout
                android:id="@+id/widget_add"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/widget_line_right"
                android:layout_toRightOf="@id/widget_line_left"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/widget_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/widget_add"
                    android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
            android:id="@+id/end_option_view"
            android:layout_width="1dp"
            android:layout_height="@dimen/navigation_height"
            android:visibility="gone"/>

</LinearLayout>
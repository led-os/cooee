<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/listview_item_scetion"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:textColor="#ffffffff"
            android:textSize="@dimen/all_apps_section_size"/>

    <com.cooeeui.brand.zenlauncher.android.view.SimpleGridView
            android:id="@+id/listview_item_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_apps_list_grid_margin_left"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="30dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@android:style/Theme.Light.NoTitleBar.Fullscreen"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="@dimen/alert_dialog_layout_width"
            android:layout_height="wrap_content"
            android:background="@drawable/up_bg"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/zen_logo"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:text="@string/zen_launcher"
                    android:textColor="#eeeeee"
                    android:textSize="17dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/change_app_icon_dialog_title"
                    android:textColor="#eeeeee"
                    android:textSize="17dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

            <CheckBox
                    android:id="@+id/cb_change_app_icon_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:button="@drawable/change_app_icon_checkbox_selector"
                    android:paddingStart="5dp"
                    android:text="@string/change_app_icon_dialog_content"
                    android:textColor="#eeeeee"
                    android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="@dimen/alert_dialog_layout_width"
            android:layout_height="50dp"
            android:layout_marginTop="-1px"
            android:background="@drawable/down_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_change_app_icon_all_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/change_app_icon_dialog_all_no"
                android:textColor="@drawable/text_selector"
                android:textSize="17dp"/>

        <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/dialog_fengexian"/>

        <TextView
                android:id="@+id/tv_change_app_icon_all_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/change_app_icon_dialog_all_yes"
                android:textColor="@drawable/text_selector"
                android:textSize="17dp"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview_application"
                android:layout_width="@dimen/all_apps_gridItemWidth"
                android:layout_height="@dimen/all_apps_gridItemHeight"
                android:clickable="true">

    <LinearLayout
            android:id="@+id/gridview_applicationGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/gridview_application_icon"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/all_apps_gridItemAppMarginBottom"
                android:gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

        <TextView
                android:id="@+id/gridview_application_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="QQ"
                android:textColor="#ffffffff"
                android:textSize="13dp">
        </TextView>
    </LinearLayout>

    <ImageView
            android:id="@+id/hideStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/hide"/>

</RelativeLayout>

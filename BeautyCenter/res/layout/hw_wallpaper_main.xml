<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hw_bg"
    android:orientation="vertical" >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/hw_head_title"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/btnLocalTheme"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/hw_radiobutton_bg"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_lcoal_operate"
            android:textColor="@drawable/hw_button_font_title_style"
            android:textSize="14dip" />

        <RadioButton
            android:id="@+id/btnHotTheme"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/hw_radiobutton_bg"
            android:button="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_online_operate"
            android:textColor="@drawable/hw_button_font_title_style"
            android:textSize="14dip" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/themeGridPager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
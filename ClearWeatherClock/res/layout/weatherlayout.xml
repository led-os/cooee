<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|right" >

    <!-- time -->

    <ImageView
        android:id="@+id/dateLeft1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/time_0" />

    <ImageView
        android:id="@+id/dateLeft2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/dateLeft1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/time_0" />

    <ImageView
        android:id="@+id/timedot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateLeft2"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/dateLeft2"
        android:contentDescription="@string/app_name"
        android:src="@drawable/time_dot" />

    <ImageView
        android:id="@+id/dateRigth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/timedot"
        android:contentDescription="@string/app_name"
        android:src="@drawable/time_0" />

    <ImageView
        android:id="@+id/dateRigth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/dateRigth1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/time_0" />

    <TextView
        android:id="@+id/time_am_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/dateRigth2"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/dateRigth2"
        android:shadowColor="#0f0f0f"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/time_am"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- date -->

    <TextView
        android:id="@+id/tadayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateRigth2"
        android:layout_alignRight="@+id/time_am_pm"
        android:layout_marginTop="3dp"
        android:shadowColor="#0f0f0f"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/default_date"
        android:textColor="#ffffffff"
        android:textSize="15dp" />

    <!-- adress -->

    <TextView
        android:id="@+id/curadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dateRigth2"
        android:layout_below="@+id/tadayDate"
        android:layout_marginTop="3dp"
        android:shadowColor="#0f0f0f"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/default_city"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/curadress"
        android:layout_alignTop="@+id/curadress"
        android:layout_below="@+id/tadayDate"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/curadress"
        android:contentDescription="@string/app_name"
        android:src="@drawable/weather_icon_postal" />

    <!-- line -->

    <ImageView
        android:id="@+id/line_view"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/curadress"
        android:layout_alignTop="@+id/dateRigth2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/time_am_pm"
        android:background="@drawable/line"
        android:contentDescription="@string/app_name" />

    <!-- right -->

    <FrameLayout
        android:id="@+id/widget_LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/line_view"
        android:layout_alignTop="@+id/line_view"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/line_view" >

        <RelativeLayout
            android:id="@+id/hava_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/curweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:shadowColor="#0f0f0f"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="@string/default_temp"
                android:textColor="#ffffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/curT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/curweather"
                android:layout_marginBottom="3dp"
                android:shadowColor="#0f0f0f"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="æ™´"
                android:textColor="#ffffffff"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/todayweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/curT"
                android:layout_alignLeft="@+id/curweather"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/curweather"
                android:contentDescription="@string/app_name"
                android:src="@drawable/weather_data_sunny" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/n_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/weather_icon_no_client"
            android:contentDescription="@string/app_name" />
    </FrameLayout>

</RelativeLayout>
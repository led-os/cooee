<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/today_weather_top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_temp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relayout_temp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageview_negative"
                android:layout_width="@dimen/below_zero_width"
                android:layout_height="@dimen/below_zero_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="3.0dip"
                android:src="@drawable/below_zero" />

            <ImageView
                android:id="@+id/imageview_tmp1"
                android:layout_width="@dimen/today_temperature_width"
                android:layout_height="@dimen/today_temperature_height"
                android:layout_toRightOf="@id/imageview_negative"
                android:src="@drawable/tp_1" />

            <ImageView
                android:id="@+id/imageview_tmp2"
                android:layout_width="@dimen/today_temperature_width"
                android:layout_height="@dimen/today_temperature_height"
                android:layout_alignBottom="@id/imageview_tmp1"
                android:layout_toRightOf="@id/imageview_tmp1"
                android:src="@drawable/tp_7" />

            <ImageView
                android:id="@+id/imageview_degree"
                android:layout_width="@dimen/today_temperature_degree"
                android:layout_height="@dimen/today_temperature_degree"
                android:layout_alignTop="@id/imageview_tmp2"
                android:layout_toRightOf="@id/imageview_tmp2"
                android:src="@drawable/degree"
                android:visibility="visible" />
            
            <TextView 
                android:id="@+id/degree_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageview_tmp2"
                android:layout_toRightOf="@id/imageview_tmp2"
                android:textSize="35dp"
                android:textColor="#ffffffff"
                android:text="℃"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageview_tmp2"
                android:layout_toRightOf="@id/imageview_tmp2"
                android:gravity="bottom"
                android:text="晴天"
                android:textColor="#ffffffff"
                android:textSize="@dimen/today_weather_condition_size" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tv_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_temp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_time"
            android:text="周二"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_lunar_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_week"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_week"
            android:text="农历"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_lunar_calendar"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_lunar_calendar"
            android:text="十月初一"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_weather_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_centerInParent="true"
        android:background="@drawable/humidity_background"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humidity"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_hum"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_hum"
            android:text="%"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_hum"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_humidity"
            android:text="风向"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />

        <TextView
            android:id="@+id/tv_wind_force"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_hum"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/tv_wind_direction"
            android:text="风力"
            android:textColor="#ffffffff"
            android:textSize="@dimen/today_weather_date_size" />
    </RelativeLayout>

</RelativeLayout>
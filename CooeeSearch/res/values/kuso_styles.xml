<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="kuso_AppBaseTheme" parent="android:Theme.Light" />

    <style name="kuso_AppTheme" parent="kuso_AppBaseTheme" />

    <style name="kuso_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignBottom">@+id/kuso_tv_history</item>
        <item name="android:background">@color/kuso_line</item>
    </style>

    <style name="kuso_width_fill_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/kuso_line</item>
    </style>

</resources>
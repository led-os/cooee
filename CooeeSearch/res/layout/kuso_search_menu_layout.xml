<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/kuso_selector_back_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="23.0dip"
        android:layout_height="23.0dip" >

        <ImageView
            android:id="@+id/kuso_search_settings"
            android:layout_width="23.0dip"
            android:layout_height="23.0dip"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/kuso_spinner"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="3.0dip"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/kuso_search_preference_triangle"
            android:paddingBottom="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingTop="5.0dip"
            android:src="@drawable/kuso_search_preference_triangle" />
    </LinearLayout>

</LinearLayout>
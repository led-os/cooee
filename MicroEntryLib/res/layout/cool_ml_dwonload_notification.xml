<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/cool_ml_notification_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingTop="3dp"
         android:paddingBottom="3dp"
        />

    <TextView
        android:id="@+id/cool_ml_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/cool_ml_notification_image"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:textColor="#FF000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cool_ml_notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cool_ml_notification_title"
        android:layout_toRightOf="@id/cool_ml_notification_image"
        android:paddingLeft="5dp"
        android:paddingTop="2dp" 
        android:textColor="#BB000000"/>

</RelativeLayout>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cooee.widgetnative.enjoy"
    android:installLocation="internalOnly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.CHANGE_COMPONENT_ENABLED_STATE"
        tools:ignore="ProtectedPermissions" />
    <!-- shell 注册权限开始 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- kepush start -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.CREATE_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- kepush end -->
    <!-- shell 注册权限结束 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/widget_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:persistent="true" >
        
        <activity
            android:name="com.cooee.widgetnative.enjoy.DownloadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Translucent_NoTitle" >
        </activity>
        
        <service
            android:name="com.cooee.statistics.StatisticsServiceNew"
            android:enabled="true"
            android:exported="true" />
        <!-- shell 注册组件开始 -->
        <service
            android:name="com.cooee.shell.shell.SdkServiceHullV5"
            android:process="com.platform.shell.sdk" >
            <intent-filter android:priority="250" >
                <action android:name="com.cooee.shell.action.SdkServiceV5" />
            </intent-filter>
        </service>
        <service
            android:name="com.cooee.shell.pay.PayServiceHullV5"
            android:process="com.platform.shell.pay" >
            <intent-filter android:priority="250" >
                <action android:name="com.cooee.shell.action.PayServiceV5" />
            </intent-filter>
        </service>

        <activity
            android:name="com.cooee.shell.shell.SdkActivityHullV5"
            android:theme="@android:color/transparent" >
        </activity>
        <activity
            android:name="com.cooee.shell.pay.PayActivityHullV5"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.cooee.shell.download.DownloaderActivityHullV5" >
        </activity>

        <receiver android:name="com.cooee.shell.shell.SdkReceiverHullV5" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <!-- shell 注册组件结束 -->


        <!-- kepush start -->
        <service
            android:name="com.kpsh.sdk.KpshService"
            android:process="com.kpsh.kpshservice" >
            <intent-filter android:priority="250" >
                <action android:name="com.kpsh.sdk.action.KpshService" />
            </intent-filter>
        </service>

        <receiver android:name="com.kpsh.sdk.KpshReceiver" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
            <intent-filter android:priority="2147483647" >
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.USER_CLEARNOTIFY" />
                <action android:name="android.intent.action.SEND_TO_KPSH" />
                <action android:name="android.intent.action.CHECK_RECEIVER" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.kpsh.sdk.KpshActivity"
            android:exported="true"
            android:taskAffinity="com.kpsh.sdk.callScreen"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <!-- kepush end -->
        
        <!-- receiver的 android:name指向的是widget的请求处理器或者说请求接收者 -->
		<receiver
			android:label="@string/app_name"
			android:name="com.cooee.widgetnative.enjoy.WidgetProvider"
			android:exported="true"
			android:process=":remote"
			>
			<intent-filter>
			    <!-- widget默认的事件action -->
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			    <!-- 点击插件对应的广播字符串 -->
                <action android:name="com.cooee.widgetnative.enjoy.click_clock_layout"/>
                <action android:name="com.cooee.widgetnative.enjoy.click_weather_layout"/>
				<!-- 用于服务被杀死后重启服务 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.MEDIA_MOUNTED" />
				<data android:scheme="file" />
			</intent-filter>
			<intent-filter android:priority="2147483645">
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
				<action android:name="android.intent.action.PHONE_STATE" />
				<action android:name="android.intent.action.SIM_STATE_CHANGED" />
				<action android:name="android.intent.action.USER_PRESENT" />
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
			<!-- widget元数据,name是写死的，resource指的是widget的配置文件 -->
			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@layout/widgetinfo" />
		</receiver>
		<service android:name="com.cooee.widgetnative.enjoy.service.ClockWeatherMusicService"
		    android:process=":remote" >
			<intent-filter android:priority="2147483645" />
        </service>
        <receiver android:name="com.cooee.widgetnative.enjoy.ReStartBroadcast"
            android:process=":remote">
           <intent-filter android:priority="2147483645">
               <action android:name="com.cooee.phenix.onResume.UpdateWidgetView"/>
           </intent-filter>
       </receiver>
    </application>

</manifest>
